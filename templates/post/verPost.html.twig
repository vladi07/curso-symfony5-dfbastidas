{% extends 'base.html.twig' %}

{% block title %}
    Ver Post|{{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}

    {#{{ dump(post) }}#}

    <div class="container bg-white rounded my-3 p-4">
        <div class="d-flex bd-highlight">
            <div class="p-2 flex-grow-1 bd-highlight">
                <h3>{{ post.titulo }}</h3>
                <div class="my-3" style="color: blue;">
                    <i class="fa fa-thumbs-up"></i>
                    <strong># Likes</strong>
                </div>
                <div style="color: green;">
                    <i class="far fa-clock"></i>
                    <strong>Fecha de publicacion: {{ post.fechaPublicacion|date('d-m-Y') }}</strong>
                </div>
            </div>
            <div class="p-2 bd-highlight">
                <div class="align-self-center">
                    <img class="rounded" src="{{ asset('uploads/foto/'~post.foto) }}" width="150px" alt="">
                </div>
            </div>
        </div>
        <hr>
        <div class="text-justify my-3">
            {{ post.contenido }}
        </div>
        <hr>
    </div>

    <div class="container p-3">
        {{ form(formulario) }}

        <h3>Comentarios</h3>
        {% for comentario in comentarios %}
            <div class="rounded bg-white my-2 p-3 border">
                <h5>{{ comentario.nombre}} Dijo:</h5>
                <div class="w-100">{{ comentario.comentario }}</div>
            </div>
        {% endfor %}
    </div>

    {{ dump(comentarios) }}

{% endblock %}